html
  head
    title Search
    include style
  body
    div#content
      h1 Search

      br 

      form(action = "movies/search" method = "GET" class = "search")
        
        label(for= "movie_Title") Movie Title: 
        div(class = "search")
          input(type = "text" id = "movie_Title" name= "movie_Title" list = "movies_list") 
          datalist(id = "movies_list")
        br
        
        label(for = "person_Name") Person Name: 
        div(class = "search")
          input(type = "text" id = "person_Name" name = "person_Name" list = "person_list")
          datalist(id = "person_list")
        br
        
        label(for = "genre") Genre: 
        div(class = "search")
          input(type = "text" id = "genre" name = "genre" list = "genre_list")
          datalist(id = "genre_list")
            for g in genre
              option(value = g)
        br
        
        label(for = "limit") Limit: 
        div(class = "search")
          input(type = "number" id = "limit" name = "limit" value = 10 required)
        
        //- hidden
        div(class = "search")
          input(type = "page" id = "page" name = "page" value = 1 hidden)
        
        div(class = "search")
          input(type = "submit" value = "search")

  script(src = "search.js")

  include footer
