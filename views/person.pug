html
  head
    title #{person.name}
    include style
  body
    div#content
      h1 #{person.name}
      a(href = person.name+"/follow") follow person
      h2 Frequent Collaborators
      if person.top_collaborators.length > 0
        ul
        each m in person.top_collaborators
          li
            a(href = "/people/" + m) #{m} 
      else
        p N/A
      h2 Work
      h3 Writer:
      div(class = "movieLink")
        if person.wrote.length > 0
          each m in person.wrote
              a(href = "/movies/"+ m._id)
                div
                  img(src=m.imageURL)
                  p #{m.title}
      h3 Actor:
      div(class = "movieLink")
        if person.acted_in.length > 0
          each m in person.acted_in
              a(href = "/movies/"+ m._id)
                div
                  img(src=m.imageURL)
                  p #{m.title}
      h3 Director:
      div(class = "movieLink")
        if person.directed.length > 0
          each m in person.directed
              a(href = "/movies/"+ m._id)
                div
                  img(src=m.imageURL)
                  p #{m.title}
